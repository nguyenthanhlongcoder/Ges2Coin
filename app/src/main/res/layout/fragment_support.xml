<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/colorBackground">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/needsupport"
        android:textSize="23dp" />

    <EditText
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/searchhere"
        android:background="@drawable/search"
        android:padding="7dp"
        android:drawablePadding="5dp"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/ic_baseline_search_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question"
        android:textSize="23dp"
        android:layout_marginBottom="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardview_expandable1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/getmoney"
                    android:orientation="vertical"

                    >
                    <LinearLayout
                        android:id="@+id/layout_content1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:weightSum="20"
                        >
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/question_number"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yhy don't i get the survey ?"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="19"/>
                        <ImageView
                            android:id="@+id/arrow1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                    </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/support_content1"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Maybe you have not verified your account, Go to account management to verify."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardview_expandable2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/getmoney"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                        android:id="@+id/layout_content2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:weightSum="20"
                        >
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="2"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/question_number"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Why don't I get coin after taking a survey?"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="19"/>
                        <ImageView
                            android:id="@+id/arrow2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                    </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/support_content2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Click the Finish button when you are done."
                            android:textSize="15sp"
                            />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardview_expandable3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/getmoney"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                        android:id="@+id/layout_content3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:weightSum="20"
                        >
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="3"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/question_number"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="If the work fails, how to handle it?"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="19"/>
                        <ImageView
                            android:id="@+id/arrow3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                    </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:id="@+id/support_content3"
                            android:paddingBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="If this error occurs, you can report to us by clicking the Report button."
                            android:textSize="15sp"
                            />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardview_expandable4">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/getmoney"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                        android:id="@+id/layout_content4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:weightSum="20"
                        >
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="4"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/question_number"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Why can't I post the job?"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="19"/>
                        <ImageView
                            android:id="@+id/arrow4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                    </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:id="@+id/support_content4"
                            android:paddingBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- You must fill in all the information.\n- Google form must link with Google Sheet (2 links you send).\n- Gmail field is required when creating a survey (to control who participates in the survey)."
                            android:textSize="15sp"
                            />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardview_expandable5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/getmoney"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                        android:id="@+id/layout_content5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:weightSum="20"
                        >
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="5"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/question_number"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="What is the minimum amount of withdraw?"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="19"/>
                        <ImageView
                            android:id="@+id/arrow5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                    </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:id="@+id/support_content5"
                            android:paddingBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minimum is 10,000 VND (Withdraw by scratch card)."
                            android:textSize="15sp"
                            />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>